@import "nib"

.pontos
  absolute top 2.5em left 0
  padding 1em
  z-index 2

  overflow-y scroll // TODO usar iScroll?
  -webkit-overflow-scrolling: touch;

  width 18em

  background white
  box-shadow 0 0 5px rgba(0,0,0,0.3)

@css {
  .pontos {
    height: -webkit-calc(100% - 2.5em);
    height: -moz-calc(100% - 2.5em);
    height: calc(100% - 2.5em);
  }
}

.titulo-pontos-proximos
  border-bottom 1px solid #444
  color #333
  font-size 1em
  line-height 1.5
  margin-bottom 0.5em

.pontos-lista-linhas
  display none

  &.show
    display block


// estilo
.pontos-ponto
  color: #333
  padding 0.75em 0
  border-bottom 1px solid #f0f0f0
  list-style-type none

.pontos-lista-linhas
  padding-top: 0.75em

.pontos-linha
  color #555
  font-size 90%
  line-height 1.5
  list-style-type none

.linha-legenda
  display inline-block
  vertical-align middle

  background transparent
  border-radius 50%
  height 0.7em
  width 0.7em

.pontos-loading
  background rgba(0,0,0,0.25)

  position absolute
  top 0
  left 0
  right 0
  bottom 0

  .spinner
    position absolute !important // precisa do important pra sobrescrver estilo inline da lib
    top 50%
    left 50%

  .carregado &
    display none
