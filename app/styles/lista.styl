@import "nib"

.pontos
  absolute top 0 left 0
  z-index 1

  height 100%
  overflow scroll // TODO usar iScroll

  width 20em

  background white
  padding: 1em
  box-shadow 0 0 5px rgba(0,0,0,0.3)


.pontos-lista-linhas
  display none

  &.show
    display block


// estilo
.pontos-ponto
  color: #333
  padding 0.75em 0
  border-bottom 1px solid #f0f0f0
  list-style-type none

.pontos-lista-linhas
  padding-top: 0.75em

.pontos-linha
  color #555
  font-size 90%
  line-height 1.5
  padding-left 1em
  list-style-type none

.pontos-loading
  background rgba(0,0,0,0.25)

  position absolute
  top 0
  left 0
  right 0
  bottom 0

  .spinner
    position absolute !important // precisa do important pra sobrescrver estilo inline da lib
    top 50%
    left 50%

  .carregado &
    display none
